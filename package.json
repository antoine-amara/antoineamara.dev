{
  "name": "staticpack",
  "description": "A reusable development environment for a 100% static website or template.",
  "repository": "https://github.com/antoine-amara/staticpack",
  "version": "0.4.0",
  "author": "Antoine Amara <amara.antoine@gmail.com>",
  "license": "GPLv3.0",
  "private": true,
  "scripts": {
    "release": "standard-version",
    "serve": "yarn build && http-server ./dist -a 0.0.0.0 -p 3000",
    "serve:dev": "webpack-dev-server --config webpack.dev.js",
    "package": "rm -f website.zip && yarn build && cd dist/ && bestzip ../website.zip *",
    "build": "webpack --config webpack.prod.js",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint --fix ./src/js/*.js",
    "lint:css": "stylelint --fix 'src/css/*.css'",
    "test": "echo \"test NOT IMPLEMENTED\"",
    "analyze-bundle": "yarn --silent build --profile --json > stats.json && webpack-bundle-analyzer stats.json ./dist/ -O -h 0.0.0.0 -p 9042"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.0",
    "autoprefixer": "^9.8.6",
    "babel-loader": "^8.1.0",
    "bestzip": "^2.1.6",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.4",
    "core-js": "^3.6.5",
    "css-loader": "^4.2.2",
    "cssnano": "^4.1.10",
    "eslint": "^7.8.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "file-loader": "^6.0.0",
    "html-webpack-inline-svg-plugin": "^2.3.0",
    "html-webpack-plugin": "^4.4.1",
    "http-server": "^0.12.3",
    "mini-css-extract-plugin": "^0.11.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "postcss-reporter": "^6.0.1",
    "standard-version": "^9.0.0",
    "stylelint": "^13.7.0",
    "stylelint-config-standard": "^20.0.0",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.3"
  }
}
